{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "commitMessageTopic": "{{{replace '[^ ]+(\/[^\/ ]+\/[^\/ ]+)' '...$1' depName}}} docker tag"
    }
  ],
  "commitMessage": "{{{commitMessagePrefix}}} {{{commitMessageAction}}} -x-{{{replace 'quay' '...' '{{{commitMessageTopic}}}' }}}-- {{{commitMessageExtra}}} {{{commitMessageSuffix}}}",
  "prTitle": "{{{commitMessagePrefix}}} {{{commitMessageAction}}} {{{commitMessageTopic}}} {{{commitMessageExtra}}} {{{commitMessageSuffix}}}"
}
